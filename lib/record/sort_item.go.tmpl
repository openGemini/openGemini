func (sli *{{.Name}}Slice) Compare (i, j int) int {
    if sli.CV.IsNil(i) && sli.CV.IsNil(j) {
    	return 0
    }

    if sli.CV.IsNil(i) {
    	return 1
    } else if sli.CV.IsNil(j) {
    	return -1
    }

    if sli.V[i] > sli.V[j] {
    	return -1
    } else if sli.V[i] == sli.V[j] {
    	return 0
    }
    return 1
}

