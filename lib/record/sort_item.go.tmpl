func (sli *{{.Name}}Slice) Swap(i, j int){
    if sli.CV.IsNil(i) && sli.CV.IsNil(j) {
    	return
    }

    if sli.CV.IsNil(i) {
    	sli.CV.setBitMap(i)
    	sli.CV.resetBitMap(j)
    } else if sli.CV.IsNil(j) {
    	sli.CV.setBitMap(j)
    	sli.CV.resetBitMap(i)
    }

    sli.V[i], sli.V[j] = sli.V[j], sli.V[i]
}

func (sli *{{.Name}}Slice) Len() int {
    return len(sli.V)
}
