    }

    if sli.CV.IsNil(postionX) {
    	return 1, nil
    }

    if cm.CV.IsNil(postionY) {
    	return -1, nil
    }

    if sli.V[postionX] > cm.V[postionY] {
    	return -1, nil
    } else if sli.V[postionX] == cm.V[postionY] {
    	return 0, nil
    }
    return 1, nil
}
